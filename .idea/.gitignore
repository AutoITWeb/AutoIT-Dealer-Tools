if (!defined('ABSPATH')) {
    exit;
} // Exit if accessed directly

/**
 * The Plugin init class
 */

class BiltorvetStatistics
{
	static function bdt_write_statistics($event, $companyName = ''){
			if(self::bdt_utils_bot_detected()) return;
	
			$ch = curl_init();

			curl_setopt($ch, CURLOPT_URL,"http://10.70.10.81:81/write?db=CarLite");
			curl_setopt($ch, CURLOPT_POST, 1);
			curl_setopt($ch, CURLOPT_CONNECTTIMEOUT, 1);
			curl_setopt($ch, CURLOPT_POSTFIELDS,"carlite,event=" . $event . ",companyName=" . $companyName . " value=1");

			// Receive server response ...
			curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);

			$server_output = curl_exec($ch);

			curl_close ($ch);
		}
	
	static function bdt_utils_bot_detected() {
		return (
    			isset($_SERVER['HTTP_USER_AGENT']) && preg_match('/bot|crawl|slurp|spider|mediapartners/i', $_SERVER['HTTP_USER_AGENT'])
  		);
	}
}